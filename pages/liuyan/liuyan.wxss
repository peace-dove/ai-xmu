/**index.wxss**/
page{
  background:rgb(241, 239, 201);
}

.send-box{
  display: flex;
  position:fixed;
  width:100%;
  bottom:0;
  left:0;
  margin:0 auto;
  padding:12px 10px;
  background: white;
}
.input{
  border: 1px solid #e7a20b;
  padding: 5px;
  border-radius: 10px;
  width:200px;
}
.msg-info{
  display: block;
  margin: 10px 0 0 0 ;
  color: rgb(231, 133, 4);
  text-align: center;
}
.place-input{
  color: rgb(230, 158, 77);
}
.list-view{
  margin: 20px 0 0 0;
}
.item{
  overflow: hidden;
  border: 2px solid rgb(214, 201, 129);
  border-radius: 10px;
  line-height: 30px;
  margin:2px;
  padding:2px;
  background:rgb(255, 251, 212);
}
.text1{
  float: left;
  word-break:break-all;
}
.close-btn{
  float: right;
  margin: 5px 5px 0 0;
}

.tian{
  background: rgb(255, 218, 8);
}

.placeholder-view {
  width: 100%;
  height: 150rpx;
}